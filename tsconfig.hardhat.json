{
  "extends": "@nomicfoundation/hardhat-ignition/typescript/tsconfig",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./typechain-types"
    ],
    "types": [
      "hardhat",
      "@nomicfoundation/hardhat-toolbox/type-extensions"
    ]
  },
  "include": [
    "./hardhat.config.ts",
    "./scripts",
    "./test",
    "./typechain-types"
  ]
}
